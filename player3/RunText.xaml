<Window x:Class="player3.RunText"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:player3"
        mc:Ignorable="d"
         WindowStartupLocation="CenterScreen"
        Title="MainWindow" Height="120" Width="800" Loaded="Window_Loaded"
        WindowStyle="None"
        Topmost="True"
        Background="#FF5D5D5D">
    <Grid>
        <Border BorderBrush="DarkGray" BorderThickness="1" >

            <Canvas x:Name="canvas" Background="#333" Height="100" Width="Auto">
                <TextBlock Text="ЭКРАН ОНЛАЙН" 
                       Name="_runningText" 
                        Canvas.Top="-1"                          
                       Width="Auto" 
                       Height="100"                        
                       Background="#333" Foreground="#EEE" FontWeight="Bold" Margin="1" FontSize="66"/>
            </Canvas>
        </Border>
    </Grid>
</Window>
